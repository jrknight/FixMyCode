@page "/Submissions/StudentSubmission"
@model StudentSubmissionModel

<head>
    <script src="CodeMirror-master/src/codemirror.js"></script>
    <link rel="stylesheet" href="CodeMirror-master/lib/codemirror.css">
    <script src="mode/javascript/javascript.js"></script>

    <title>@ViewBag.Title</title>
    @{
        ViewBag.Title = "Student Submissions";
    }

    <style type="text/css" media="screen">

        #editor {
            position: relative;
            width: 50%;
        }
    </style>
</head>

<div class="container-fluid col-lg-4 offset-lg-4" style="margin-top:30px">
    <h2>Submit Code</h2>
    <form method="post" class="form">
        <div class="form-group">
            <label asp-for="QueryModel.Title">Title for your question:</label>
            <input asp-for="QueryModel.Title" class="form-control" placeholder="Enter Title" />
            <span asp-validation-for="QueryModel.Title"></span>
        </div>

        <label asp-for="QueryModel.Code">Copy and paste your code here:</label>
        <div>
            <input asp-for="QueryModel.Code" id="editor" />

            <script src="/ace-builds/src-noconflict/ace.js" type="text/javascript" charset="utf-8"></script>
            <script>
                var editor = ace.edit("editor", {
                    theme: "ace/theme/tomorrow_night_blue",
                    mode: "ace/mode/html",
                    autoScrollEditorIntoView: true,
                    maxLines: 30,
                    minLines: 30
                });
                editor.setTheme("ace/theme/monokai");
                editor.session.setMode("ace/mode/javascript");
                editor.resize(20, 20, 20, 20);
            </script>
        </div>

        <div class="form-group">
            <label asp-for="QueryModel.Description">Thoroughly describe your problem:</label>
            <textarea asp-for="QueryModel.Description" class="form-control" rows="8"></textarea>
            <span asp-validation-for="QueryModel.Description"></span>
        </div>

        <div class="form-group">
            <label asp-for="QueryModel.Question">Specific question about your code:</label>
            <textarea asp-for="QueryModel.Question" class="form-control" rows="8"></textarea>
            <span asp-validation-for="QueryModel.Question"></span>
        </div>

        <script>
            $(document).ready(function () {
                $("#btnSave").on("click", function () {
                    $.ajax({
                        url: '@Url.Action("YourAction", "YourController")',
                        type: 'POST',
                        data: {
                            id:@Model.QueryModel.Code,
                            html: ace.edit("editor").getValue()
                        },
                        cache: false,
                        success: function (response) {
                            alert("Changes Saved.");
                        }
                    });
                });
            });
        </script>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>