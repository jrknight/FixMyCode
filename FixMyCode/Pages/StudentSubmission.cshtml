@page
@model StudentSubmissionModel
@{
    ViewData["Title"] = "StudentSubmission";
}

<link rel="stylesheet" href="site.css">

<div>
    @using (Html.BeginForm("StudentSubmission", "StudentSubmission", FormMethod.Post))
    {
        @Html.Label("Specific Question")
        <br />
        @Html.TextAreaFor(model => model.question, htmlAttributes: new { style = "overflow:auto;resize:none;margin-bottom:50px", @rows = 10, @cols = 30 })
        <br />

        @Html.Label("Your Code")
        <br />
        @Html.TextAreaFor(model => model.code, htmlAttributes: new { style = "overflow:auto;resize:none", @rows = 10, @cols = 30 })
        <br />

        <button type="submit">Submit</button>
    }
</div>