@page "/Account/Login"
@model FixMyCode.Pages.LoginModel

<head>
    <meta name="viewport" content="width=device-width;height=device-height" />

    <link rel="stylesheet" href="~/css/style.css">

    <title>@ViewBag.Title</title>
    @{
        ViewBag.Title = "Login";
    }
</head>

<body>
    <form method="post" class="form">
        <label asp-for="VerificationModel.Email">Email</label>
        <br />
        <input asp-for="VerificationModel.Email" />
        <span asp-validation-for="VerificationModel.Email" class="text-danger"></span>
        <br />

        <br />
        <label asp-for="VerificationModel.Password">Password</label>
        <br />
        <input asp-for="VerificationModel.Password" type="password" />
        <span asp-validation-for="VerificationModel.Password" class="text-danger"></span>
        <br />

        <br />
        <input asp-for="VerificationModel.RememberMe" type="checkbox" />
        <label asp-for="VerificationModel.RememberMe">Remember Me?</label>
        <br />

        <br />
        <button type="submit" id="login">Login</button>
    </form>

    <footer class="footer">
        <p>&copy; 2018 - FixMyCode - Alpha 1.2</p>
    </footer>
</body>