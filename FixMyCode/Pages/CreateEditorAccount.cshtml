@page "/Account/CreateEditorAccount"
@model FixMyCode.Pages.CreateEditorAccountModel
@{
    ViewData["Title"] = "CreateEditorAccount";
}

<head>
    <title>@ViewBag.Title</title>
    @{
        ViewBag.Title = "Create Editor Account";
    }
</head>

<div class="container-fluid col-lg-4 offset-lg-4">
    <h2>Create Editor Account</h2>
    <form method="post" class="form">

        <div class="form-group">
            <label asp-for="CredentialModel.Username">Username:</label>
            <input asp-for="CredentialModel.Username" class="form-control" placeholder="Enter Username" />
            <span asp-validation-for="CredentialModel.Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CredentialModel.Email">Email:</label>
            <input asp-for="CredentialModel.Email" type="email" class="form-control" placeholder="Enter Email" />
            <span asp-validation-for="CredentialModel.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CredentialModel.Password">Password:</label>
            <input asp-for="CredentialModel.Password" type="password" class="form-control" placeholder="Enter Password" />
            <span asp-validation-for="CredentialModel.Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CredentialModel.ConfirmPassword">Confirm Password:</label>
            <input asp-for="CredentialModel.ConfirmPassword" class="form-control" placeholder="Re-enter Password" />
            <span asp-validation-for="CredentialModel.ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" id="submit_create" class="btn btn-primary">Create</button>
    </form>
</div>

<div class="offset-lg-3">
    <label class="col-form-label-lg">All editors must be approved before they are active, this can take some time, so bear with us!</label>
</div>
